<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#ffffff">

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_stock"


        android:layout_width="266dp"
        android:layout_height="182dp"
        android:layout_marginStart="92dp"

        android:layout_marginTop="80dp"
        android:layout_marginEnd="604dp"
        android:layout_marginBottom="304dp"
        android:background="@drawable/button_background"
        android:shadowRadius="5"
        android:text="@string/button_stock"
        android:textColor="#808080"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_gallery" />

    <Button
        android:id="@+id/btn_order"

        android:layout_width="266dp"
        android:layout_height="182dp"

        android:layout_marginStart="201dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="303dp"
        android:background="@drawable/button_background"
        android:shadowRadius="5"
        android:text="@string/button_order"
        android:textColor="#808080"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableTop="@drawable/stock_image"
        app:layout_constraintStart_toEndOf="@+id/btn_stock"
        app:layout_constraintTop_toBottomOf="@+id/text_gallery" />

    <Button
        android:id="@+id/btn_supplier"

        android:layout_width="266dp"
        android:layout_height="182dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="604dp"
        android:layout_marginBottom="177dp"
        android:background="@drawable/button_background"
        android:shadowRadius="5"
        android:text="@string/button_supplier"
        android:textColor="#808080"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_order"
        app:layout_constraintVertical_bias="0.067" />

    <Button
        android:id="@+id/button"

        android:layout_width="266dp"
        android:layout_height="182dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="308dp"
        android:layout_marginBottom="148dp"
        android:background="@drawable/button_background"
        android:shadowRadius="5"
        android:text="@string/string_shop"
        android:textColor="#808080"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toEndOf="@+id/btn_supplier"
        app:layout_constraintTop_toBottomOf="@+id/btn_order"
        app:layout_constraintVertical_bias="0.082" />

</androidx.constraintlayout.widget.ConstraintLayout>